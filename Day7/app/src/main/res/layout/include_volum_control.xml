<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#c99f9e9e">
    <TextView
            android:id="@+id/textVol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volumn"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:paddingStart="16dp"/>
    <SeekBar
            android:id="@+id/volumeSeekBar"
            android:layout_width="260dp"
            android:layout_toRightOf="@id/textVol"
            android:paddingStart="12dp"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"/>
    <TextView
            android:id="@+id/textLoop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loop"
            android:layout_toRightOf="@id/volumeSeekBar"
            android:layout_centerVertical="true"
            android:paddingStart="12dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkLoop"
            android:layout_toRightOf="@id/textLoop"
            android:paddingEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>